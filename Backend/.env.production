# Production Environment Variables Template
# Copy this file to .env and fill in the actual values

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py
SECRET_KEY=your_production_secret_key_here
JWT_SECRET_KEY=your_production_jwt_secret_key_here

# Database Configuration (Render will provide this)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Redis Configuration (Render will provide this)
REDIS_URL=redis://hostname:port
CELERY_BROKER_URL=redis://hostname:port
CELERY_RESULT_BACKEND=redis://hostname:port

# Mpesa Configuration (Production values)
MPESA_CONSUMER_KEY=your_production_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_production_mpesa_consumer_secret
MPESA_BUSINESS_SHORT_CODE=your_production_shortcode
MPESA_PASSKEY=your_production_passkey
MPESA_CALLBACK_URL=https://your-app-name.onrender.com/api/v1/payments/verify

# Admin User Configuration
ADMIN_EMAIL=admin@tuinuewasichana.com
ADMIN_PASSWORD=secure_admin_password_here

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.com,https://your-app-name.onrender.com

# Logging
LOG_LEVEL=INFO